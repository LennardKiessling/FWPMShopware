
{% sw_extends '@Storefront/storefront/base.html.twig' %}
{% set stickyNavigation = theme_config('Sticky-Navigation-Desktop') %}
{% set navigationOnScroll = theme_config('Navigation-On-Scroll-Desktop') %}


        {% block base_header %}
            <script>
                var navigationOnScroll = {{ navigationOnScroll|default('false') }};
                var stickyNavigation = {{ stickyNavigation|default('false') }};
            </script>
            <header class="header-main {% if (stickyNavigation or navigationOnScroll) %}sticky-header{% endif %}">
                {% block base_header_inner %}
                    <div class="container">
                        {% sw_include '@Storefront/storefront/layout/header/header.html.twig' %}
                    </div>
                {% endblock %}
            </header>
        {% endblock %}

        {% block base_navigation %}
            <div class="nav-main {% if (stickyNavigation or navigationOnScroll) %}sticky-header{% endif %}">
                {% block base_navigation_inner %}
                    {% sw_include '@Storefront/storefront/layout/navigation/navigation.html.twig' %}
                {% endblock %}
            </div>
        {% endblock %}

        {% block base_main %}
            <main class="content-main {% if (stickyNavigation or navigationOnScroll) %}sticky-header{% endif %}">
                {% block base_flashbags %}
                    <div class="flashbags container">
                        {% for type, messages in app.flashes %}
                            {% sw_include '@Storefront/storefront/utilities/alert.html.twig' with { type: type, list: messages } %}
                        {% endfor %}
                    </div>
                {% endblock %}

                {% block base_main_inner %}
                    <div class="container">
                        {% block base_main_container %}
                            <div class="container-main">
                                {% block base_breadcrumb %}
                                    {% sw_include '@Storefront/storefront/layout/breadcrumb.html.twig' with {
                                        context: context,
                                        category: page.product.seoCategory
                                    } only %}
                                {% endblock %}

                                {% block base_content %}{% endblock %}
                            </div>
                        {% endblock %}
                    </div>
                {% endblock %}
            </main>
        {% endblock %}
