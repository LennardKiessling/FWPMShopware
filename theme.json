{
  "name": "FwpmLFLTheme",
  "author": "Shopware AG",
  "views": [
     "@Storefront",
     "@Plugins",
     "@FwpmLFLTheme"
  ],
  "style": [
    "app/storefront/src/scss/overrides.scss",
    "@Storefront",
    "app/storefront/src/scss/base.scss"
  ],
  "script": [
    "@Storefront",
    "app/storefront/dist/storefront/js/fwpm-l-f-l-theme.js",
    "app/storefront/src/main.js"
  ],
  "asset": [
    "@Storefront",
    "app/storefront/src/assets"
  ],
  "config": {

    "tabs": {
      "sizes": {
          "label": {
              "en-GB": "Sizesettings",
              "de-DE": "Größeneinstellungen"
          }
      },
      "general-settings": {
        "label": {
            "en-GB": "General Settings",
            "de-DE": "Allgemeine Einstellungen"
        }
      },
      "colors": {
        "label": {
            "en-GB": "Colors",
            "de-DE": "Farbeinstellungen"
        }
      },
      "header-settings": {
        "label": {
            "en-GB": "Header Settings",
            "de-DE": "Header und Navi Einstellungen"
        }
      }
    },

    "blocks": {
      "sizes": {
        "fontSizes": {
          "en-GB": "Font Sizes",
          "de-DE": "Schriftgrößen"
        },
        "fontWeights": {
          "en-GB": "Font Weight",
          "de-DE": "Schriftstärke"
        }
      },
      "header-settings": {
        "header-colors": {
          "en-GB": "Header Colors",
          "de-DE": "Farben Header"
        },
        "header-sizes": {
          "en-GB": "Sizes Header",
          "de-DE": "Header Größen"
        }
      }
    },

    "fields": {
      "site-max-width": {
        "label": {
          "en-GB": "Width of the Website",
          "de-DE": "Breite der Website"
        },
        "type": "text",
        "value": "100%",
        "editable": true,
        "tab": "sizes"
      },
      "display-home-button": {
        "label":{
          "en-GB": "Width of the Website",
          "de-DE": "Breite der Website"
        },
        "type": "switch",
        "value": false,
        "editable": true,
        "tab": "general-settings"
      },
      "border-radius-product-box": {
        "label":{
          "en-GB": "Border Radius of the product box",
          "de-DE": "Rundung des Rahmens der Produktbox"
        },
        "type": "text",
        "value": "10px",
        "editable": true,
        "tab": "sizes"
      },
      "padding-product-box": {
        "label":{
          "en-GB": "padding of the product box",
          "de-DE": "Innenabstand der Produktbox"
        },
        "type": "text",
        "value": "0px",
        "editable": true,
        "tab": "sizes"
      },
      "border-color-product-box": {
        "label":{
          "en-GB": "Border Color of the Product Box",
          "de-DE":"Farbe der Border der Product Box"
        },
        "type": "color",
        "value": "lightgrey",
        "editable": true,
        "tab": "color"
      },
      "checkout-background-color": {
        "label":{
          "en-GB": "Background color of the checkout",
          "de-DE":"Hintergrundfarbe des Checkouts"
        },
        "type": "color",
        "value": "#E8E8E8",
        "editable": true,
        "tab": "color"
      },
      "checkout-background-elements-color": {
        "label":{
          "en-GB": "Background color of the elements used in the checkout",
          "de-DE":"Hintergrundfarbe der einzelnen Elemente im Checkout"
        },
        "type": "color",
        "value": "#f9f9f9",
        "editable": true,
        "tab": "color"
      },
      "border-radius-checkout": {
        "label":{
          "en-GB": "Border Radius of the checkout elements",
          "de-DE": "Rundung des Rahmens der Checkout Elemente"
        },
        "type": "text",
        "value": "15px",
        "editable": true,
        "tab": "sizes"
      },
      "btn-border-radius": {
        "label":{
          "en-GB": "Border Radius of the Buttons",
          "de-DE": "Rundung des Rahmens der Buttons"
        },
        "type": "text",
        "value": "5px",
        "editable": true,
        "tab": "sizes"
      },
      "card-border-radius": {
        "label":{
          "en-GB": "Border Radius of the Account Cards",
          "de-DE": "Rundung des Rahmens der Account Kartenabschnitte"
        },
        "type": "text",
        "value": "15px",
        "editable": true,
        "tab": "sizes"
      },
      "account-card-title-background-color": {
        "label":{
          "en-GB": "Title background color of the Account Cards",
          "de-DE": "Titel-Hintergrundfrabe der Account Kartenabschnitte"
        },
        "type": "color",
        "value": "#E8E8E8",
        "editable": true,
        "tab": "color"
      },
      "account-card-background-color": {
        "label":{
          "en-GB": "Background color of the Account Cards",
          "de-DE": "Hintergrundfrabe der Account Kartenabschnitte"
        },
        "type": "color",
        "value": "#E8E8E8",
        "editable": true,
        "tab": "color"
      },
      "LFL-h1-font-size": {
        "label":{
          "en-GB": "Font size of h1",
          "de-DE": "Schriftgröße H1 Überschrift"
        },
        "type": "text",
        "value": "36px",
        "editable": true,
        "tab": "sizes",
        "block": "fontSizes"
      },
      "LFL-h2-font-size": {
        "label":{
          "en-GB": "Font size of h2",
          "de-DE": "Schriftgröße H2 Überschrift"
        },
        "type": "text",
        "value": "28px",
        "editable": true,
        "tab": "sizes",
        "block": "fontSizes"
      },
      "LFL-h3-font-size": {
        "label":{
          "en-GB": "Font size of h3",
          "de-DE": "Schriftgröße H3 Überschrift"
        },
        "type": "text",
        "value": "24px",
        "editable": true,
        "tab": "sizes",
        "block": "fontSizes"
      },
      "LFL-h4-font-size": {
        "label":{
          "en-GB": "Font size of h4",
          "de-DE": "Schriftgröße H4 Überschrift"
        },
        "type": "text",
        "value": "20px",
        "editable": true,
        "tab": "sizes",
        "block": "fontSizes"
      },
      "LFL-h5-font-size": {
        "label":{
          "en-GB": "Font size of h5",
          "de-DE": "Schriftgröße H5 Überschrift"
        },
        "type": "text",
        "value": "16px",
        "editable": true,
        "tab": "sizes",
        "block": "fontSizes"
      },
      "LFL-h6-font-size": {
        "label":{
          "en-GB": "Font size of h6",
          "de-DE": "Schriftgröße H6 Überschrift"
        },
        "type": "text",
        "value": "14px",
        "editable": true,
        "tab": "sizes",
        "block": "fontSizes"
      },
      "LFL-font-size-base": {
        "label":{
          "en-GB": "Font size of base",
          "de-DE": "Schriftgröße Basis"
        },
        "type": "text",
        "value": "0.875rem",
        "editable": true,
        "tab": "sizes",
        "block": "fontSizes"
      },
      "LFL-font-size-lg": {
        "label":{
          "en-GB": "Font size of large",
          "de-DE": "Schriftgröße Groß"
        },
        "type": "text",
        "value": "1rem",
        "editable": true,
        "tab": "sizes",
        "block": "fontSizes"
      },
      "LFL-font-size-sm": {
        "label":{
          "en-GB": "Font size small",
          "de-DE": "Schriftgröße klein"
        },
        "type": "text",
        "value": "0.75rem",
        "editable": true,
        "tab": "sizes",
        "block": "fontSizes"
      },
      "LFL-font-weight-normal": {
        "label":{
          "en-GB": "Font weight normal",
          "de-DE": "Schriftstärke normal"
        },
        "type": "text",
        "value": "400",
        "editable": true,
        "tab": "sizes",
        "block": "fontWeights"
      },
      "LFL-headings-font-weight": {
        "label":{
          "en-GB": "Font weight headings",
          "de-DE": "Schriftstärke Überschriften"
        },
        "type": "text",
        "value": "700",
        "editable": true,
        "tab": "sizes",
        "block": "fontWeights"
      },
      "LFL-height-header": {
        "label":{
          "en-GB": "Height Header Desktop",
          "de-DE": "Höhe des Headers Desktop"
        },
        "type": "text",
        "value": "80px",
        "editable": true,
        "tab": "header-settings",
        "block": "header-sizes"
      },
      "LFL-background-color-header": {
        "label":{
          "en-GB": "Color Header Desktop",
          "de-DE": "Farbe des Headers Desktop"
        },
        "type": "color",
        "value": "#ffffff",
        "editable": true,
        "tab": "header-settings",
        "block": "header-colors"
      }
    }
  }
}