{
  "name": "FwpmLFLTheme",
  "author": "Shopware AG",
  "views": [
     "@Storefront",
     "@Plugins",
     "@FwpmLFLTheme"
  ],
  "style": [
    "app/storefront/src/scss/overrides.scss",
    "@Storefront",
    "app/storefront/src/scss/base.scss"
  ],
  "script": [
    "@Storefront",
    "app/storefront/dist/storefront/js/fwpm-l-f-l-theme.js"
  ],
  "asset": [
    "@Storefront",
    "app/storefront/src/assets"
  ],
  "config": {
    "tabs": {
      "sizes": {
          "label": {
              "en-GB": "Sizesettings",
              "de-DE": "Größeneinstellungen"
          }
      },
      "general-settings": {
        "label": {
            "en-GB": "General Settings",
            "de-DE": "Allgemeine Einstellungen"
        }
    } 
    },
    "fields": {
      "site-max-width": {
        "label": {
          "en-GB": "Width of the Website",
          "de-DE": "Breite der Website"
        },
        "type": "text",
        "value": "100%",
        "editable": true,
        "tab": "sizes"
      },
      "display-home-button": {
        "label":{
          "en-GB": "Width of the Website",
          "de-DE": "Breite der Website"
        },
        "type": "switch",
        "value": false,
        "editable": true,
        "tab": "general-settings"
      }
    }
  }
}