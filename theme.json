{
  "name": "FwpmLFLTheme",
  "author": "Shopware AG",
  "views": [
     "@Storefront",
     "@Plugins",
     "@FwpmLFLTheme"
  ],
  "style": [
    "app/storefront/src/scss/overrides.scss",
    "@Storefront",
    "app/storefront/src/scss/base.scss"
  ],
  "script": [
    "@Storefront",
    "app/storefront/dist/storefront/js/fwpm-l-f-l-theme.js"
  ],
  "asset": [
    "@Storefront",
    "app/storefront/src/assets"
  ],
  "config": {
    "tabs": {
      "sizes": {
          "label": {
              "en-GB": "Sizesettings",
              "de-DE": "Größeneinstellungen"
          }
      },
      "general-settings": {
        "label": {
            "en-GB": "General Settings",
            "de-DE": "Allgemeine Einstellungen"
        }
      },
      "colors": {
        "label": {
            "en-GB": "Colors",
            "de-DE": "Farbeinstellungen"
        }
    } 
    },
    "fields": {
      "site-max-width": {
        "label": {
          "en-GB": "Width of the Website",
          "de-DE": "Breite der Website"
        },
        "type": "text",
        "value": "100%",
        "editable": true,
        "tab": "sizes"
      },
      "display-home-button": {
        "label":{
          "en-GB": "Width of the Website",
          "de-DE": "Breite der Website"
        },
        "type": "switch",
        "value": false,
        "editable": true,
        "tab": "general-settings"
      },
      "border-radius-product-box": {
        "label":{
          "en-GB": "Border Radius of the product box",
          "de-DE": "Rundung des Rahmens der Produktbox"
        },
        "type": "text",
        "value": "10px",
        "editable": true,
        "tab": "sizes"
      },
      "padding-product-box": {
        "label":{
          "en-GB": "padding of the product box",
          "de-DE": "Innenabstand der Produktbox"
        },
        "type": "text",
        "value": "0px",
        "editable": true,
        "tab": "sizes"
      },
      "border-bottom-color-product-box": {
        "label":{
          "en-GB": "Add a border below the product box?",
          "de-DE":"Fügt einen unteren Rand zur Produktbox hinzu?"
        },
        "type": "color",
        "value": "lightgrey",
        "editable": true,
        "tab": "color"
      }
    }
  }
}